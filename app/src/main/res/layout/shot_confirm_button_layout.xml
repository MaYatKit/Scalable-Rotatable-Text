<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_edit_text_dialog_bottom_ll_height"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/video_edit_bottom_tab_bg"
    android:scaleType="center">

    <ImageView
        android:id="@+id/text_edit_close_img"
        android:src="@drawable/edit_panel_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/video_edit_text_dialog_bottom_img_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.example.sticker.view.SpecifiedTextView
        android:id="@+id/text_edit_enter_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/enter_text"
        android:textColor="#5cffffff"
        app:layout_constraintStart_toEndOf="@id/text_edit_close_img"
        app:layout_constraintEnd_toStartOf="@+id/text_edit_confirm_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/text_edit_confirm_img"
        android:src="@drawable/edit_panel_confirm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/video_edit_text_dialog_bottom_img_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

